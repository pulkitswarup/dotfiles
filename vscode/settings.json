{
    "editor.renderWhitespace": "all",
    "editor.fontFamily": "'Fira Code', Menlo, Monaco, monospace",
    "editor.fontSize": 12,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.fontLigatures": true,
    "window.nativeTabs": true,
    "editor.smoothScrolling": true,
    "editor.rulers": [
        80, 120
    ],
    "editor.snippetSuggestions": "top",
    "editor.cursorBlinking": "phase",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "editor.renderLineHighlight": "all",
    "editor.renderIndentGuides": true,
    "workbench.editor.showIcons": true,
    "editor.selectionHighlight": true,
    "editor.wordWrap": "on",
    "explorer.autoReveal": true,
    "docker.enableLinting": true,
    "files.trimTrailingWhitespace": true,
    "workbench.welcome.enabled": false,
    "php.suggest.basic": false,
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "workbench.activityBar.visible": false,
    "files.associations": {
        "Dockerfile*":"dockerfile"
    },
    "workbench.colorCustomizations": {
      "tab.activeBorder": "#0F89CF"
    },
    "sublimeTextKeymap.promptV3Features": true,
    "editor.formatOnPaste": true,
    "window.title":"${activeEditorLong}${separator}${appName}",
    "editor.lineHeight": 25,
    "python.pythonPath": "/usr/local/bin/python3",
    "git.autofetch": true,
    "extensions.ignoreRecommendations": false,
    "terminal.integrated.fontSize": 12,
    "window.zoomLevel": 1,
    "phpcs.enable": false,
    "phpcs.executablePath": "/Users/pulkit/.composer/vendor/bin/phpcs",
    "phpcs.standard": "PSR2",
    "phpcbf.enable": false,
    "phpcbf.documentFormattingProvider": true,
    "phpcbf.onsave": false,
    "phpcbf.standard": "PSR2",
    "phpcbf.executablePath": "/Users/pulkit/.composer/vendor/bin/phpcbf",
    // "phpmd.rules": "cleancode,unusedcode,naming",
    "intelephense.completionProvider.backslashPrefix": false,
    "projectManager.sortList": "Recent",
    "projectManager.git.baseFolders": [
        "/Users/pulkit/workspace/microservice/services",
        "/Users/pulkit/workspace/packages"
    ],
    "projectManager.openInNewWindowWhenClickingInStatusBar": true,
    "gitlens.keymap": "alternate",
    "workbench.colorTheme": "Visual Studio Dark"
}
